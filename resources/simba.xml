<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


	<bean id="simulation" class="il.ac.tau.yoavram.pes.Simulation">
		<property name="terminator" ref="tickTerminator" />
		<property name="model" ref="simbaModel" />
		<property name="dataGatherers">
			<list>
				<ref bean="simpleGatherer" />
			</list>
		</property>
	</bean>
	<bean id="simbaModel" class="il.ac.tau.yoavram.simba.SimbaModel">
		<property name="populationSize" value="1000" />
		<property name="fractionOfGenesToChange" value="0.0075" />
		<property name="environmentalChangeFrequency" value="0.00001" />
		<property name="environment" ref="envinronment" />
		<lookup-method name="createPopulation" bean="populationFactory" />
	</bean>
	<bean id="environment" class="il.ac.tau.yoavram.simba.Environment">
		<constructor-arg name="numberOfEnvironmentalGenes"
			value="5000" />
	</bean>
	<bean id="tickTerminator" class="il.ac.tau.yoavram.pes.terminators.TickTerminator">
		<property name="endAtTick"></property>
	</bean>
	<bean id="simpleGatherer" class="il.tau.ac.yoavram.pes.statisticsSimpleDataGatherer"></bean>
	<bean id="populationFactory" class="il.tau.ac.yoavram.simba.IdealParentPopulationFactory">
		<property name="numberOfEnvironmentalGenes" value="500" />
		<property name="numberOfHousekeepingGenes" value="500" />
		<property name="populationSize" value="100000"></property>
	</bean>
</beans>